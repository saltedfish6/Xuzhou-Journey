.container {
  height: 100vh;
  background: white;
}

.wrapper {
  padding: 0;
}

.hot {
  padding: 32px 24px 0 24px;
}

.hot h1 {
  font-size: 0.43rem; // 32px
  font-weight: 600;
  margin-bottom: 0.32rem; // 24px
  color: #333;
  letter-spacing: -0.007rem; // -0.5px
}

.item {
  display: inline-block;
  padding: 0.21rem 0.32rem; // 16px 24px
  background: #f7f8fa;
  border-radius: 0.43rem; // 32px
  margin-right: 0.21rem; // 16px
  margin-bottom: 0.21rem; // 16px
  font-size: 0.35rem; // 26px
  font-weight: 400;
  color: #333;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
  
  &:hover {
    background: #eef0f2;
  }
  
  &:active {
    transform: scale(0.98);
    background: #e1e3e6;
  }
}

.list {
  margin-top: 16px;
  background: white;
  padding: 0 24px;
}

.list .item {
  display: block;
  background: white;
  border-radius: 0;
  margin-right: 0;
  margin-bottom: 0;
  padding: 0.32rem 0; // 24px 0
  border-bottom: 0.01rem solid #f0f0f0; // 1px
  font-size: 0.37rem; // 28px
  font-weight: 400;
  color: #333;
  
  &:last-child {
    border-bottom: none;
  }
  
  &:hover {
    background: #fafafa;
  }
  
  &:active {
    background: #f5f5f5;
    transform: none;
  }
}

// 小红书风格的搜索历史标题
.searchHistory {
  padding: 0.43rem 0.32rem 0 0.32rem; // 32px 24px 0 24px
  
  h2 {
    font-size: 0.43rem; // 32px
    font-weight: 600;
    margin-bottom: 0.32rem; // 24px
    color: #333;
    letter-spacing: -0.007rem; // -0.5px
  }
}

// 搜索建议样式优化
.suggestions {
  background: white;
  
  .suggestionItem {
    display: flex;
    align-items: center;
    padding: 0.27rem 0.32rem; // 20px 24px
    border-bottom: 0.01rem solid #f0f0f0; // 1px
    font-size: 0.37rem; // 28px
    color: #333;
    cursor: pointer;
    
    &:last-child {
      border-bottom: none;
    }
    
    &:hover {
      background: #fafafa;
    }
    
    &:active {
      background: #f5f5f5;
    }
    
    .searchIcon {
      margin-right: 0.27rem; // 20px
      color: #969799;
      font-size: 0.32rem; // 24px
    }
  }
}