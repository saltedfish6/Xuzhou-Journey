.detail {
  min-height: 100vh;
  background: #f9fafc;
  padding-bottom: 160px;
}

.header {
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  composes: glass-effect from '../../index.css';
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  composes: shadow-medium from '../../index.css';
}

.actions {
  display: flex;
  gap: 12px;
}

.content {
  padding: 0;
}

.imageContainer {
  width: 100%;
  height: 250px;
  overflow: hidden;
  composes: shadow-light from '../../index.css';
}

.mainImage {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.mainImage:hover {
  transform: scale(1.05);
}

.articleInfo {
  padding: 20px;
  composes: glass-effect from '../../index.css';
  border-radius: var(--radius-large) var(--radius-large) 0 0;
  margin: -16px 16px 0 16px;
  position: relative;
  composes: shadow-medium from '../../index.css';
  border-top: 1px solid rgba(255, 255, 255, 0.8);
}

.title {
  font-size: 48px;
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin: 0 0 16px 0;
  line-height: 1.4;
}

.meta {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 16px;
  font-size: 28px;
  color: #666;
}

.author {
  font-weight: 500;
  color: #667eea;
}

.publishTime::before {
  content: '•';
  margin-right: 4px;
}

.likes {
  color: #ff6b6b;
}

.likes::before {
  content: '•';
  margin-right: 4px;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.tag {
  padding: 6px 12px;
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  font-size: 22px;
  border-radius: 12px;
  transition: all 0.3s ease;
  border: 1px solid rgba(102, 126, 234, 0.2);
}

.tag:hover {
  background: rgba(102, 126, 234, 0.2);
  transform: translateY(-2px);
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.15);
}

.articleContent {
  padding: 20px;
  line-height: 1.6;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 0 0 16px 16px;
  margin: 0 16px 16px 16px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.8);
  border-top: none;
}

.markdown h1 {
  font-size: 42px;
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin: 20px 0 16px 0;
  padding-bottom: 8px;
  border-bottom: 2px solid rgba(102, 126, 234, 0.3);
}

.markdown h2 {
  font-size: 38px;
  font-weight: 600;
  color: #333;
  margin: 16px 0 12px 0;
  border-left: 4px solid #667eea;
  padding-left: 12px;
}

.markdown h3 {
  font-size: 34px;
  font-weight: 600;
  color: #333;
  margin: 12px 0 8px 0;
}

.markdown p {
  margin: 12px 0;
  color: #555;
  font-size: 32px;
  line-height: 1.8;
}

.listItem {
  margin: 8px 0;
  padding-left: 16px;
  font-size: 32px;
  color: #555;
  position: relative;
}

.listItem::before {
  content: '';
  position: absolute;
  left: 0;
  top: 14px;
  width: 6px;
  height: 6px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
}

.listItem strong {
  color: #333;
  font-weight: 600;
}

.locationInfo {
  padding: 20px;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  margin: 16px;
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.8);
}

.locationInfo h3 {
  margin: 0 0 12px 0;
  font-size: 28px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 600;
}

.location .locationName {
  font-size: 28px;
  font-weight: 500;
  color: #333;
  margin-bottom: 8px;
}

.location .locationAddress {
  font-size: 24px;
  color: #666;
  line-height: 1.5;
}

.bottomActions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16px;
  composes: glass-effect from '../../index.css';
  border-top: 1px solid rgba(0, 0, 0, 0.05);
  z-index: 100;
  composes: shadow-medium from '../../index.css';
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  color: #667eea;
}

.spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(102, 126, 234, 0.2);
  border-top: 3px solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20px;
  box-shadow: 0 0 16px rgba(102, 126, 234, 0.2);
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  color: #666;
  text-align: center;
  padding: 20px;
}

.errorIcon {
  font-size: 60px;
  margin-bottom: 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

@media (max-width: 768px) {
  .header {
    padding: 10px 12px;
  }

  .articleInfo {
    padding: 12px;
  }

  .articleContent {
    padding: 12px;
  }

  .locationInfo {
    margin: 12px;
  }

  .bottomActions {
    padding: 10px 12px;
  }
}