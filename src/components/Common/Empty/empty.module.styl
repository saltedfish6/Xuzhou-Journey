.empty
  display flex
  align-items center
  justify-content center
  min-height 200px
  padding 40px 20px
  text-align center

.content
  max-width 300px
  width 100%

.icon
  margin-bottom 16px
  
.iconEmoji
  font-size 48px
  line-height 1
  
.iconCustom
  display flex
  align-items center
  justify-content center
  font-size 48px
  color #d9d9d9

.title
  margin 0 0 8px 0
  font-size 16px
  font-weight 500
  color #333333
  line-height 1.4

.description
  margin 0 0 24px 0
  font-size 14px
  color #666666
  line-height 1.5

.action
  margin-top 24px

// 尺寸变体
.small
  min-height 120px
  padding 20px
  
  .iconEmoji, .iconCustom
    font-size 32px
    
  .title
    font-size 14px
    margin-bottom 4px
    
  .description
    font-size 12px
    margin-bottom 16px
    
  .action
    margin-top 16px

.large
  min-height 300px
  padding 60px 40px
  
  .iconEmoji, .iconCustom
    font-size 64px
    
  .title
    font-size 20px
    margin-bottom 12px
    
  .description
    font-size 16px
    margin-bottom 32px
    
  .action
    margin-top 32px

// 移动端适配
@media (max-width: 768px)
  .empty
    padding 20px 16px
    
  .large
    padding 40px 20px
    min-height 240px
    
    .iconEmoji, .iconCustom
      font-size 56px