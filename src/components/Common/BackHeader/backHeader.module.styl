.header
  position: fixed
  top: 0
  left: 0
  right: 0
  z-index: 100
  background: #fff
  border-bottom: 1px solid #f0f0f0
  backdrop-filter: blur(10px)
  -webkit-backdrop-filter: blur(10px)

.container
  display: flex
  align-items: center
  justify-content: space-between
  height: 44px
  padding: 0 16px
  max-width: 100vw

.backButton
  display: flex
  align-items: center
  justify-content: center
  width: 32px
  height: 32px
  border: none
  background: transparent
  border-radius: 6px
  cursor: pointer
  transition: all 0.2s ease
  color: #333
  
  &:hover
    background: #f5f5f5
    
  &:active
    background: #e8e8e8
    transform: scale(0.95)
    
  &:focus-visible
    outline: 2px solid #007AFF
    outline-offset: 2px

.backIcon
  width: 20px
  height: 20px
  flex-shrink: 0

.title
  flex: 1
  text-align: center
  font-size: 17px
  font-weight: 600
  color: #000
  margin: 0 12px
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  line-height: 1.2

.rightAction
  display: flex
  align-items: center
  gap: 8px
  min-width: 32px
  justify-content: flex-end

// 暗色模式支持
@media (prefers-color-scheme: dark)
  .header
    background: #1c1c1e
    border-bottom-color: #38383a
    
  .title
    color: #fff
    
  .backButton
    color: #fff
    
    &:hover
      background: #2c2c2e
      
    &:active
      background: #3a3a3c

// 安全区域适配
@supports (padding-top: env(safe-area-inset-top))
  .header
    padding-top: env(safe-area-inset-top)
    
  .container
    height: calc(44px + env(safe-area-inset-top))
    padding-top: env(safe-area-inset-top)

// 移动端优化
@media (max-width: 480px)
  .container
    padding: 0 12px
    
  .title
    font-size: 16px
    margin: 0 8px