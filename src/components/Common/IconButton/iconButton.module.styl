.iconButton {
  border: none;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: var(--transition-normal);
  outline: none;
  
  &:hover {
    transform: scale(1.1);
  }
  
  &:active {
    transform: scale(0.95);
  }
  
  &.disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none !important;
  }
}

// 变体样式
.primary {
  background: var(--gradient-primary);
  color: white;
  box-shadow: var(--shadow-medium);
  
  &:hover {
    box-shadow: var(--shadow-heavy);
  }
}

.secondary {
  background: var(--gradient-secondary);
  color: white;
  box-shadow: var(--shadow-medium);
  
  &:hover {
    box-shadow: var(--shadow-heavy);
  }
}

.ghost {
  background: transparent;
  color: #666;
  border: 1px solid #ddd;
  
  &:hover {
    background: #f5f5f5;
    border-color: #999;
  }
}

.glass {
  backdrop-filter: var(--blur-medium);
  -webkit-backdrop-filter: var(--blur-medium);
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: white;
  
  &:hover {
    background: rgba(255, 255, 255, 0.2);
  }
}

// 尺寸样式
.small {
  width: 2rem;
  height: 2rem;
  font-size: 0.875rem;
}

.medium {
  width: 2.5rem;
  height: 2.5rem;
  font-size: 1rem;
}

.large {
  width: 3rem;
  height: 3rem;
  font-size: 1.25rem;
}