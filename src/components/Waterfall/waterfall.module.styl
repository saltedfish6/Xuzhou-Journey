.waterfall
  width 100%
  padding 6px // 减少内边距

.waterfallContainer
  display flex
  align-items flex-start
  justify-content space-between

.waterfallColumn
  flex 1
  display flex
  flex-direction column

.waterfallItem
  background white
  overflow hidden
  cursor pointer
  margin-bottom 8px // 参考小红书卡片间距
  width 100%
  
  // 自定义圆角 - 参考小红书设计
  border-radius 12px 12px 0 0 // 适中的圆角
  composes shadow-light from global
  composes transition-normal from global

  &:hover
    transform translateY(-2px)
    box-shadow 0 4px 16px rgba(0, 0, 0, 0.15)

  &:active
    transform translateY(0)

.imageContainer
  position relative
  width 100%
  overflow hidden

.imageSkeleton
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 1

.image
  width 100%
  height auto
  display block
  transition opacity 0.3s ease
  opacity 0

  &.imageLoaded
    opacity 1

.imagePlaceholder
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background #f5f5f5
  display flex
  align-items center
  justify-content center
  z-index 1

.errorPlaceholder
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background #f8f8f8
  display flex
  flex-direction column
  align-items center
  justify-content center
  z-index 2

.errorIcon
  font-size 48px
  color #ccc
  margin-bottom 8px

.errorText
  font-size 24px
  color #999
  text-align center

.skeleton
  width 100%
  height 100%
  background linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%)
  background-size 200% 100%
  animation skeleton-loading 1.5s infinite

@keyframes skeleton-loading
  0%
    background-position 200% 0
  100%
    background-position -200% 0

.content
  padding 10px 12px // 调整内边距，参考小红书设计

.title
  font-size 30px // 参考小红书标题大小
  font-weight 600
  color #333
  margin 0 0 8px 0 // 适中的底部间距
  line-height 1.4 // 适中的行高
  display -webkit-box
  -webkit-line-clamp 2
  -webkit-box-orient vertical
  overflow hidden

.description
  font-size 26px // 参考小红书描述文字大小
  color #666
  margin 0 0 8px 0 // 适中的底部间距
  line-height 1.4 // 适中的行高
  display -webkit-box
  -webkit-line-clamp 2 // 保持2行显示
  -webkit-box-orient vertical
  overflow hidden

.meta
  display flex
  align-items center
  justify-content space-between
  font-size 24px
  color #999

.author
  flex 1
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

.likes
  display flex
  align-items center
  gap 2px
  color #ff6b6b

.loadMoreTrigger
  padding 20px
  display flex
  justify-content center
  align-items center

.loadingIndicator
  display flex
  align-items center
  gap 10px
  color #666
  font-size 32px

.spinner
  width 32px
  height 32px
  border 3px solid #f3f3f3
  border-top 3px solid #666
  border-radius 50%
  animation spin 1s linear infinite

@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)

.noMoreData
  text-align center
  padding 24px
  color #999
  font-size 32px

.emptyState
  display flex
  flex-direction column
  align-items center
  justify-content center
  padding 60px 20px
  color #999

.emptyIcon
  font-size 120px
  margin-bottom 24px

// 移动端优化
@media (max-width: 768px)
  .waterfall
    padding 8px

  .waterfallItem
    border-radius 8px

  .content
    padding 14px

  .title
    font-size 38px
    margin 0 0 8px 0

  .description
    font-size 34px
    margin 0 0 8px 0

  .meta
    font-size 30px

  .loadingIndicator
    font-size 38px

  .noMoreData
    font-size 38px

  .emptyIcon
    font-size 100px